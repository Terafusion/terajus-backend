    "components": {
        "schemas": {
            "AuthCreate": {
                "required": [
                    "name",
                    "email",
                    "password",
                    "password_confirmation"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "maximum": "255"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "maximum": "25",
                        "minimum": "8",
                        "contains": "[A-Z],[#?!@$%&*=_]"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "maximum": "25",
                        "minimum": "8",
                        "contains": "[A-Z],[#?!@$%&*=_]"
                    }
                },
                "type": "object"
            },
            "AuthCreateResponse": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "access_token": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "AuthPasswordRequest": {
                "required": [
                    "grant_type",
                    "client_id",
                    "client_secret",
                    "username",
                    "password"
                ],
                "properties": {
                    "grant_type": {
                        "type": "string",
                        "default": "password"
                    },
                    "client_id": {
                        "type": "string"
                    },
                    "client_secret": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "refresh_token": {
                        "type": "string",
                        "example": "Only if you want to refresh token. Do not send username and password"
                    }
                },
                "type": "object"
            },
            "AuthRefreshRequest": {
                "required": [
                    "grant_type",
                    "client_id",
                    "client_secret",
                    "refresh_token"
                ],
                "properties": {
                    "grant_type": {
                        "type": "string",
                        "default": "refresh_token"
                    },
                    "client_id": {
                        "type": "string"
                    },
                    "client_secret": {
                        "type": "string"
                    },
                    "refresh_token": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "AuthResponse": {
                "properties": {
                    "access_token": {
                        "type": "string"
                    },
                    "refresh_token": {
                        "type": "string"
                    },
                    "token_type": {
                        "type": "string"
                    },
                    "expires_in": {
                        "type": "integer",
                        "example": "integer"
                    },
                    "email": {
                        "type": "string",
                        "example": "tes*******@test.com"
                    }
                },
                "type": "object"
            },
            "ConflictException": {
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "LegalCase": {
                "properties": {
                    "user_id": {
                        "type": "integer"
                    },
                    "court": {
                        "type": "string"
                    },
                    "status": {
